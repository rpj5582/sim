    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args": [
                "testInput.sim"
            ]
        },
        {
            "type": "antlr-debug",
            "request": "launch",
            "name": "Debug Current Grammar",
            "grammar": "${file}",
            "input": "${workspaceFolder}/testInput.sim",
            "visualParseTree": true,
            "printParseTree": true
        }
    ]
}